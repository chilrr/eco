---
interface Props {
  src: string;
  alt: string;
  title?: string;
  caption?: string;
  size?: 'small' | 'medium' | 'large';
}

const { 
  src, 
  alt, 
  title, 
  caption,
  size = 'medium'
} = Astro.props;
---

<div class={`phone-mockup ${size}`}>
  <div class="phone-container">
    <img 
      src={src}
      alt={alt}
      title={title}
      class="phone-image"
      loading="lazy"
    />
  </div>
  {caption && <p class="phone-caption">{caption}</p>}
</div>

<style>
  .phone-mockup {
    margin: 2rem auto;
    text-align: center;
    max-width: 100%;
  }

  .phone-mockup.small {
    max-width: 280px;
  }

  .phone-mockup.medium {
    max-width: 350px;
  }

  .phone-mockup.large {
    max-width: 420px;
  }

  .phone-container {
    position: relative;
    display: inline-block;
    border-radius: 25px;
    box-shadow: 
      0 8px 30px rgba(0, 0, 0, 0.12),
      0 4px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    background: linear-gradient(145deg, #f8f9fa, #e9ecef);
    padding: 4px;
  }

  .phone-container:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 
      0 15px 40px rgba(0, 0, 0, 0.15),
      0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .phone-image {
    width: 100%;
    height: auto;
    border-radius: 21px;
    display: block;
    transition: filter 0.3s ease;
  }

  .phone-container:hover .phone-image {
    filter: brightness(1.05);
  }

  .phone-caption {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-style: italic;
    line-height: 1.4;
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .phone-mockup {
      margin: 1.5rem auto;
    }
    
    .phone-mockup.small {
      max-width: 240px;
    }

    .phone-mockup.medium {
      max-width: 300px;
    }

    .phone-mockup.large {
      max-width: 350px;
    }

    .phone-container:hover {
      transform: none;
      box-shadow: 
        0 8px 30px rgba(0, 0, 0, 0.12),
        0 4px 15px rgba(0, 0, 0, 0.08);
    }
  }

  @media (max-width: 480px) {
    .phone-mockup.small,
    .phone-mockup.medium,
    .phone-mockup.large {
      max-width: 280px;
    }
  }
</style>