---
interface Props {
	title: string;
	description: string;
	image: string;
}

const { title, description, image } = Astro.props;
---

<article class="blog-card">
	<img src={image} alt={title} />
	<div class="content">
		<h2>{title}</h2>
		<p>{description}</p>
	</div>
</article>

<style>
	.blog-card {
		background: white;
		border: 1px solid var(--accent);
		border-radius: 4px;
		overflow: hidden;
		transition: transform 0.2s ease;
	}
	.blog-card:hover {
		transform: translateY(-4px);
	}
	.blog-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
		filter: grayscale(30%);
		transition: filter 0.3s ease;
	}
	.blog-card:hover img {
		filter: grayscale(20%);
	}
	.content {
		padding: 1.5rem;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		color: var(--text-primary);
		margin-bottom: 0.5rem;
	}
	p {
		margin: 0;
		color: var(--text-secondary);
		line-height: 1.4;
	}
</style>